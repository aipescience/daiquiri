<div class="main">
    <h2>Participant: <?php echo $this->escape($this->row['firstname'] . ' ' . $this->row['lastname']); ?></h2>

    <dl class="dl-horizontal">
        <?php foreach ($this->row as $key => $value): ?>
        <?php if (substr($key, -strlen('_id')) !== '_id'): ?>
        <dt><?php echo ucfirst(str_replace('_',' ',$this->escape($key))); ?></dt>
        <dd>
            <?php if (is_array($value)): ?>
                <ul class="unstyled">
                <?php foreach($value as $contribution): ?>
                    <li><p>
                            <?php echo $this->escape(ucfirst($contribution['contribution_type'])); ?>: <?php echo $this->escape(ucfirst($contribution['title'])); ?>
                        </p>
                        <p>
                            <?php echo $this->escape(ucfirst($contribution['abstract'])); ?>
                        </p>
                    </li>
                <?php endforeach; ?>
                </ul>
            <?php else: ?>
                <?php echo $this->escape($value); ?>
            <?php endif; ?>
        </dd>
        <?php endif; ?>
        <?php endforeach; ?>
    </dl>

    <?php
    echo $this->internalLink(array(
        'text' => 'Back',
        'class' => 'daiquiri-modal-close',
        'href' => $this->redirect,
        'prepend' => '<p>',
        'append' => '</p>'));
    ?>
</div>
