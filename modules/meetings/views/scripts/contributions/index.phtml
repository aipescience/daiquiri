<div class="main">
    <?php if (isset($this->meeting)): ?>
    <h2><?php echo $this->escape($this->meeting['title']); ?></h2>
    <h4>Contributions</h4>
    <?php else: ?>
    <h2>Contributions</h4>
    <?php endif; ?>

    <div id="table"></div>

    <?php
    if ($this->slug !== null) {
        echo $this->internalLink(array(
            'text' => 'Create new contribution for this meeting',
            'href' => '/meetings/' . $this->slug . '/contributions/create/' ,
            'prepend' => '<p>',
            'append' => '</p>'));
    }
    echo $this->internalLink(array(
        'text' => 'Back',
        'href' => $this->redirect,
        'prepend' => '<p>',
        'append' => '</p>'));
    ?>
</div>

<script type="text/javascript">
    $(document).ready(function() {
        <?php if ($this->slug !== null): ?>
            var params = {'meetingId': <?php echo $this->escape($this->meeting['id']); ?>};
        <?php else: ?>
            var params = {};
        <?php endif; ?>

        $('#table').daiquiri_table({
            'rowsurl': "<?php echo $this->baseUrl('/meetings/contributions/rows') ?>",
            'colsurl': "<?php echo $this->baseUrl('/meetings/contributions/cols') ?>",
            'params': params,
            'success': function() {
                $('a','tbody','#table').click(function(){
                    new daiquiri.Modal({
                        'url': this.href,
                        'width': 800,
                        'success': function () {
                            daiquiri.table.items['table'].rows();
                        }
                    });
                    return false;
                });
            }
        });
    });
</script>