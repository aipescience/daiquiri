        <h2>Update user detail</h2>
        <?php if (empty($this->form)): ?>
            <p class="text-error"><?php echo $this->escape($this->error); ?></p>
        <?php else: ?>
            <?php echo $this->form; ?>
        <?php endif; ?>
    <?php endif; ?>
