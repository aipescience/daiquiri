<div class="main">
    <?php if ($this->status === 'ok'): ?>
        <p>User detail  updated.</p>
        <?php
        echo $this->internalLink(array(
            'text' => 'Back to user',
            'href' => '/auth/user/',
            'prepend' => '<p>',
            'append' => '</p>'));
