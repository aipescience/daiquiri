        <thead>
            <tr>
                <th class="span3">Key</th>
                <th>Value</th>
            </tr>
        </thead>
        <tbody>
            <?php foreach ($this->row as $key => $value): ?>
                <tr>
                    <td><?php echo ucfirst($this->escape($key)); ?></td>
