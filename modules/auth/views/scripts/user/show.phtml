    <h2>Details of user "<?php echo $this->escape($this->row['username']); ?>"</h2>

    <h4>User information</h4>

    <table class="table table-condensed">
        <thead>
            <tr>
                <th class="span3">Key</th>
                <th>Value</th>
            </tr>
        </thead>
        <tbody>
            <?php foreach (array('id', 'username', 'email', 'role', 'status') as $key): ?>
